	<content><![CDATA[
int l=${1:0},r=${2:INT_MAX};
int m,ans=-1;
while(l<=r)
{
	m=l+(r-l)/2;
	if(check(m))
	{
		ans=${3:m};
		l=m+1;
	}
	else r=m-1;
}
]]></content>
